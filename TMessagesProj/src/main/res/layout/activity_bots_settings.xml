<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_window"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutAutoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textAutoBotsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            tools:textColor="@color/colorThemeBlue" />

        <TextView
            android:id="@+id/textAutoBotsDialogsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textAutoBotsLabel"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"
            android:textColor="#373737"
            android:textSize="16sp"
            tools:textColor="@color/colorBlack" />

        <Switch
            android:id="@+id/switchAutoDialogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/iMeSwitch"
            android:layout_marginEnd="22dp"
            app:layout_constraintBottom_toBottomOf="@+id/textAutoBotsDialogsLabel"
            app:layout_constraintTop_toTopOf="@+id/textAutoBotsDialogsLabel"
            tools:layout_editor_absoluteX="350dp" />

        <View
            android:id="@+id/viewDevider"
            app:layout_constraintTop_toBottomOf="@+id/textAutoBotsDialogsLabel"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:background="#e8e8e8"
            android:layout_height="1dp"/>


        <TextView
            android:id="@+id/textAutoBotsGroupsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewDevider"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"
            android:textColor="#373737"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            tools:textColor="@color/colorBlack" />

        <Switch
            android:id="@+id/switchAutoGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="@+id/textAutoBotsGroupsLabel"
            app:layout_constraintBottom_toBottomOf="@+id/textAutoBotsGroupsLabel"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <View
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textAutoBotsGroupsLabel"
            android:background="#e8e8e8"
            android:layout_height="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutAutoContainer"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textOftenUsedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="17dp"
            android:textColor="#373737"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            tools:textColor="@color/colorBlack" />

        <Switch
            android:id="@+id/switchOftenUsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="@+id/textOftenUsedLabel"
            app:layout_constraintBottom_toBottomOf="@+id/textOftenUsedLabel"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textOftenUsedLabel"
            android:background="#e8e8e8"
            android:layout_height="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>